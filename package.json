{
    "name": "oneness-linters",
    "version": "1.0.0",
    "description": "",
    "workspaces": [
        "./packages/*"
    ],
    "main": "index.js",
    "scripts": {
        "prepare": "husky install",
        "lint:js": "eslint --ext .js,.jsx,.ts,.tsx . --fix",
        "lint:styles": "stylelint '**/*.{css,scss}'",
        "lint:other": "npm run prettier -- --check",
        "lint": "npm run lint:js && npm run lint:other && npm run lint:styles",
        "prettier": "prettier '**/*.{js,md,yaml,yml,json}'"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "devDependencies": {
        "@commitlint/cli": "^19.4.1",
        "@commitlint/config-conventional": "^19.4.1",
        "@oneness-ui/eslint-config": "^0.0.2",
        "eslint": "^8.57.0",
        "husky": "^9.1.5",
        "lerna": "^8.1.8",
        "nano-staged": "^0.8.0"
    },
    "nano-staged": {
        "*.{js,ts}": [
            "eslint --fix --quiet --report-unused-disable-directives"
        ]
    }
}
